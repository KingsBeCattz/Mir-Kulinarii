---
import Image from "astro/components/Image.astro";

interface Props {
	title: string;
	slogan: string;
	image: {
		src: ImageMetadata;
		alt: string;
	};
}

const { title, slogan, image } = Astro.props;
---

<div class="hero">
  <Image
    src={image.src}
    alt={image.alt}
    class="hero-image"
  />
  <div class="hero-text">
    <h1 class="montserrat-600">{title}</h1>
    <p class="montserrat-300">{slogan}</p>
  </div>
  <div class="hero-alt">
    <span class="alt-text">{image.alt}</span>
  </div>
</div>

<style>
  .hero {
    display: grid;
  }

  .hero .hero-image {
		width: 100%;
		height: 400px;
		object-fit: cover;
		opacity: 0.5;
    grid-row: 1 / 1;
    grid-column: 1 / 1;
	}

	.hero .hero-text {
    grid-row: 1 / 2;
    grid-column: 1 / 1;
		color: white;
		text-align: center;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
    z-index: 100;

		& * {
			background-color: rgba(0, 0, 0, 0.5);
			padding: 0.5rem;
			border-radius: 0.5rem;
			margin: 0;
			width: fit-content
		}
	}

  .hero .hero-alt {
    grid-row: 1 / 2;
    grid-column: 1 / 1;
    background-color: #000;
    color: white;
    opacity: 0.5;
    width: fit-content;
    height: fit-content;
    padding: 0.5rem 1rem 0.5rem 0.5rem;
    border-bottom-right-radius: 1rem;
  }

	.hero .hero-text h1 {
		font-size: 3rem;
	}

	.hero .hero-text p {
		font-size: 1.5rem;
		border-top-left-radius: 0;
		border-top-right-radius: 0;
	}
</style>